<!-- Active "Sign Up" form -->

<style>
input {
  font-family: FontAwesome;
}
</style>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-sign-in-up"} ) do |f| %>

  <div class="account-wall">  
      <img class="profile-img" src=<%= asset_path("akpsi_color_200.png")%> alt="akpsi_color_200">

      <p class="profile-name">AKÎ¨: Alpha Beta Chapter</p>
      <span class="profile-email">Active Signup</span><br />


    <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: "&#xf007;  Name".html_safe %>

    <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: "&#xf003;  Email".html_safe %>

    <%= f.password_field :password, class: 'form-control', autofocus: true, placeholder: "&#xf084;  Password".html_safe %>

    <%= f.password_field :password_confirmation, class: 'form-control', autofocus: true, placeholder: "&#xf084;  Password Confirmation".html_safe %>
    <br />
    <br />

    <%= f.submit "Sign up", class: "btn btn-sm" %>

  </div>

<% end %>

<%= render "devise/shared/links" %>
