<!-- Active "Sign In" form -->

<style>
input {
  font-family: FontAwesome;
}
</style>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-sign-in-up"} ) do |f| %>

  <div class="account-wall">	
  	  <img class="profile-img" src=<%= asset_path("akpsi_bw_200.png")%> alt="akpsi_bw_200">

  	  <p class="profile-name">AKÎ¨: Alpha Beta Chapter</p>
      <span class="profile-email">Active Login</span><br />

	  <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: "&#xf003;  Email".html_safe %><br />

	  <%= f.password_field :password, class: 'form-control', autofocus: true, placeholder: "&#xf084;  Password".html_safe %>
	  <br />
	  <br />

	  <% if devise_mapping.rememberable? -%>
	    <div>Remember me: <br /><%= f.check_box :remember_me %></div> 
	    <br /> 
	  <% end %>

	  <%= f.submit "Sign in", class: "btn btn-sm" %>

  </div>

<% end %>

<%= render "devise/shared/links" %>

