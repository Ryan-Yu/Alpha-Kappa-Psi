<style>

  .form-blast
  {
      max-width: 80%;
      padding: 15px;
      margin: 0 auto;
      padding-top: 5px;
      text-align: center; 
  }

  .form-blast .form-control
  {
      position: relative;
      font-size: 12px;
      padding: 6px;

      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;

  }

    .bio-field {
      resize: none;
      width: 100%;
      height: 300px;
  }

</style>

<div class="account-wall-static">

	<div id="intro">

	    <h1 style="font-size:30px;">Watchdog</h1>
	    <h3>Submit Anonymous Email</h3>

	</div>

	<br />

	<p style="text-align:center;">Use this form to submit a watchdog. Your submission will be <b>fully anonymous</b>,<br /> and will be sent automatically to Internal Audit, the Vice President of Administration, and the President.</p><br />

	<%= form_for @watchdog_entry, :html => {:class => "form-blast"}, :url => watchdog_path, method: "post" do |form| %>

	    <%= render 'shared/error_messages', object: form.object%>

	    <%= form.text_field :subject, class: 'form-control bio-field', style: 'padding:15px;', placeholder: "Subject".html_safe %>

	    <%= form.text_area :body, class: 'form-control bio-field', style: 'padding-left:15px;', placeholder: "Body".html_safe %>

	    <br />
	    <br />

	    <%= form.submit "Send Watchdog", class: "home-button" %>

	<% end %> <!-- end form_for -->

</div>