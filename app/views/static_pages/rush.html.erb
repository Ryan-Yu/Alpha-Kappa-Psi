
<!-- Content -->

<% provide(:title, 'Rush AKÎ¨') %>

<% if !@rushflyer.nil? && @rushflyer.front.exists? %>
	<%= image_tag @rushflyer.front.url, :style => "position:relative;width:75%; height:auto; display:block; margin-left:auto; margin-right:auto; border: 10px solid #fff;box-shadow: 0px 7px 14px rgba(0, 0, 0, 0.5);" %>
	<br />
	<br />
<% end %>

<div class="account-wall-static">
	<img class="profile-img" src=<%= asset_path("akpsi_color_200.png")%> alt="akpsi_color_200">
	<div id="intro">
	  	<h1>Alpha Kappa Psi</h1>
	  	<h3><%= @rushevents.first.semester unless @rushevents.empty? %> Rush Calendar</h3>
	  	<br />
	  	<div id="motto-bg">
		  	<h3>"Alpha Kappa Psi is recognized as the premier developer of principled business leaders."</h3>
		</div>
		<br />
		<br />
	</div>

	<!-- If there are, for some reason, no rush events, then display this message -->
	<% if @rushevents.empty? %>
		<p style="font-size:14px; text-align:center;"> Please check back later for rush information.</p>
	<% end %>

	<% @rushevents.each do |rush_event| %>
		<!-- Partial located at views/rush_events/_rush_event.html.erb -->
		<%= render rush_event %>
	<% end %>

	<br />

	<div id="intro">
		<h1>Prospective Rushees</h1>
		<h3>Rushing Alpha Kappa Psi this semester?</h3>
		<p class="linkclickblk"><br />
		   <a href=<%= rush_application_index_path %> style="color:#95bcb8; border:3px solid #95bcb8;"> Click here </a> 
	    </p>
	</div>

</div>



