<style>
	.rush-cal {
		width:25%; 
		height:auto; 
		margin-left:auto; 
		margin-right:auto; 
		text-align:center; 
		background-color:#fff;
		font-family: 'Lato', sans-serif; 
		letter-spacing: 0.1em; 
		padding-top:10px; 
		padding-bottom:10px; 
		font-size:13px; 
		box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
	}

	.rush-cal {
		color:#000;
	}

	.rush-cal:hover {
		color:#000;
		box-shadow: none;
	}

	.rush-flyer {
		position:relative;
		width:63%; 
		height:auto; 
		display:block; 
		margin-left:auto; 
		margin-right:auto; 
		border: 10px solid #fff;
		box-shadow: 0px 7px 14px rgba(0, 0, 0, 0.5);
	}

	a:hover {
		text-decoration: none;
	}

	@media (max-width: 767px) {
		.rush-cal {
			width:50%;
			height:auto;
		}

		.rush-flyer {
			width: 80%;
			height:auto;
		}
	}

</style>


<!-- Content -->

<% provide(:title, 'Rush AKÎ¨') %>

<% if !@rushflyer.nil? && @rushflyer.front.exists? %>
	<a href="#calendar">
		<div class="rush-cal">
			View Rush Calendar &nbsp;
			<i class="fa fa-arrow-circle-o-down" style="font-size:18px; color:#eee;"></i>
		</div>
		
	</a>
	<br />

	<%= image_tag @rushflyer.front.url, :class => "rush-flyer" %>
	<br />
	<br />
<% end %>

<div class="account-wall-static">
	<a name="calendar"><img class="profile-img" src=<%= asset_path("akpsi_color_200.png")%> alt="akpsi_color_200"></a>
	<div id="intro">
	  	<h1>Alpha Kappa Psi</h1>
	  	<h3><%= @rushevents.first.semester unless @rushevents.empty? %> Rush Calendar</h3>
	  	<br />
	  	<div id="motto-bg">
		  	<h3>"Alpha Kappa Psi is recognized as the premier developer of principled business leaders."</h3>
		</div>
		<br />
		<br />
	</div>

	<!-- If there are, for some reason, no rush events, then display this message -->
	<% if @rushevents.empty? %>
		<p style="font-size:14px; text-align:center;"> Please check back later for rush information.</p>
	<% end %>

	<% @rushevents.each do |rush_event| %>
		<!-- Partial located at views/rush_events/_rush_event.html.erb -->
		<%= render rush_event %>
	<% end %>

	<br />

	<div id="intro">
		<h1>Prospective Rushees</h1>
		<h3>Rushing Alpha Kappa Psi this semester?</h3>
		<p class="linkclickblk"><br />
		   <a href=<%= rush_application_index_path %> style="color:#95bcb8; border:3px solid #95bcb8;"> Click here </a> 
	    </p>
	</div>

</div>



