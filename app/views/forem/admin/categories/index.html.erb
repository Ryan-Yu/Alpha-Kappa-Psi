<style>

  .forums thead th {
    background: #95bcb8;
    color: white;
    padding: 10px;
    border-bottom: 3px solid #232323;
    font-size: 100%;
    font-family: 'Lato', sans-serif;
    
  }

</style>

<div class="account-wall-static" style="font-family: 'Lato', sans-serif;">

  <h3><%= t("forem.admin.category.index") %></h3>

  <span class="linkclickblk">
     <a href=<%= forem.admin_root_path %> > <%= t('back_to_admin', :scope => "forem.admin") %> </a> 
  </span> <br /><br />


  <%= link_to t("forem.admin.category.new_link"), forem.new_admin_category_path, :class => "btn btn-sm" %><br><br>

  <table id='forums' class='forums table-striped table' cellspacing='0'>
    <thead>
      <tr>
        <th><%= t('edit', :scope => 'forem.admin.categories') %></th>
        <th><%= t('delete', :scope => 'forem.admin.categories') %></th>
        <th><%= t('category', :scope => 'forem.admin.categories') %></th>

      </tr>
    </thead>
    <tbody>
      <% @category.each do |category| %>
        <tr class="forum <%= cycle("odd", "even") %>">
          <td><%= link_to t('edit', :scope => 'forem.admin.categories'), forem.edit_admin_category_path(category), :class => "btn btn-sm" %></td>
          <td><%= link_to t('delete', :scope => 'forem.admin.categories'), forem.admin_category_path(category), :method => :delete, 
          data: { :confirm => t("delete_confirm", :scope => 'forem.admin.categories') }, :class => "btn btn-sm" %></td>
          <td>
            <%= forem_emojify(category.name) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <span class="linkclickblk">
     <a href=<%= forem.admin_forums_path %> > <%= t('forem.admin.forum.index') %> </a> 
  </span> 

</div>
