<style>
  a {
    color:#000;
  }

  a:hover {
    text-decoration: none;
  }

  .btn {
    font-family: 'Lato', sans-serif;
    background-color: #fff;
  }

</style>


<div id='forum'>
  <h2 style="font-family: 'Lato', sans-serif;"><%= link_to t('forem.forum.forums'), forem.root_path %> &raquo; <%= link_to forem_emojify(forum.category), [forem, forum.category] %> &raquo; <%= link_to forem_emojify(forum.title), [forem, forum] %></h2>
  <span id='description' style="font-family: 'Lato', sans-serif;"><%= forem_format(forum.description) %></span>
  <hr />
  <div id='forum_topic_links' class='btn-group btn-sm'>
    <% unless @topic.try(:new_record?) %>
      <% if can? :create_topic, @forum %>
        <%= link_to t('forem.topic.links.new'), forem.new_forum_topic_path(forum), :class => "btn btn-sm" %>
      <% end %>
    <% end %>
    <% if @topic %>
      <%= link_to t('forem.topic.links.back_to_topics'), forem.forum_path(forum), :class => "btn btn-sm" %>
    <% end %>
    <% if can? :moderate, @forum %>
      <%= link_to t('forem.forum.moderator_tools'), forem.forum_moderator_tools_path(forum), :class => "btn btn-inverse" %>
    <% end %>
  </div>
</div>
