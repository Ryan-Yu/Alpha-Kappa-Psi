<a name='post-<%= post.id %>'></a>
<div id='post_<%= post.id %>' class='reply_to_post post <%= cycle('odd', 'even') -%> span10'>
  <div class='user span2'>
    <div class='username'>
      <div style="padding-top:5px;"><%= link_to_if Forem.user_profile_links, post.user, [main_app, post.user] %></div>
    </div>
    <% if !post.user.photograph.nil? && post.user.photograph.exists? %>
      <%= image_tag post.user.photograph.url(:thumb), :style => "padding-bottom:10px; padding-top:5px;" %>
    <% end %>
  </div>

  <div class='contents span7'>
    <time datetime="<%= post.created_at.to_s(:db) -%>" style="padding-top:5px;"><%= "#{time_ago_in_words(post.created_at)} #{t("ago")}" %></time><br />
    <span style="font-size:14px;"><%= forem_format(post.text) %></span>

    <% if post.reply_to %>
      <span class='in_reply_to'>
        <%= link_to "#{t("forem.post.in_reply_to")} #{post.reply_to.user}", "#post-#{post.reply_to.id}" %>
      </span>
    <% end %>

  </div>
 
</div>