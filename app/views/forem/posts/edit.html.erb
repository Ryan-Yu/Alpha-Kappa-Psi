<div class="account-wall-static">

	<%= render :partial => 'forem/forums/head', :locals => { :forum => @topic.forum } %>

	<h4><%= t("forem.post.edit", :post => @post) %></h4>

	<%= simple_form_for [forem, @topic, @post] do |f| %>
	  <%= render :partial => "form", :locals => { :f => f } %>
	  <%= f.submit t("forem.post.buttons.edit"), :class => "btn btn-sm" %>
	<% end %>

</div>